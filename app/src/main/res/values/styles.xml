<resources>

    <!-- Base application theme. -->
    <style name="currentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->

    </style>
    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/theme_color</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>

    <style name="TranslucentAppTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="TranslucentNoAnimAppTheme" parent="AppTheme">
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--无进入动画-->
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="refreshStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="ptr_duration_to_close">200</item>
        <item name="ptr_duration_to_close_header">1000</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="RegisterTextTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <!--自定义EditText样式-->
    <style name="editTextStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">40dp</item>

    </style>
    <style name="RegisterTextContent">
        <item name="android:color">@color/text_content_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--自定义TextView样式1-->
    <style name="textViewSystle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--自定义TextView样式2-->
    <style name="textViewSystle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--自定义Button样式-->
    <style name="buttonSystle">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">93px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
