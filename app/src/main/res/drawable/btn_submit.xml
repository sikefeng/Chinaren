<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="#ffebebeb" />
            <stroke
                android:color="@color/text_gray_color"
                android:width="0.5dip"
                />
            <corners
                android:bottomLeftRadius="10.0dip"
                android:bottomRightRadius="10.0dip"
                android:topLeftRadius="10.0dip"
                android:topRightRadius="10.0dip" />
            <padding
                android:bottom="1.0px"
                android:left="1.0px"
                android:right="1.0px"
                android:top="1.0px" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <solid android:color="@color/white" />
            <stroke
                android:color="@color/text_gray_color"
                android:width="0.5dip"/>
            <corners
                android:bottomLeftRadius="10.0dip"
                android:bottomRightRadius="10.0dip"
                android:topLeftRadius="10.0dip"
                android:topRightRadius="10.0dip" />
            <padding
                android:bottom="1.0px"
                android:left="1.0px"
                android:right="1.0px"
                android:top="1.0px" />

        </shape>
    </item>
</selector>